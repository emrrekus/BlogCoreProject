@model List<EntityLayer.Concrete.Article>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Blog Posts</h3>
		<div class="inner-sec">
			<!--left-->
			<div class="left-blog-info-w3layouts-agileits text-left">
				<div class="row">
					@foreach(var item in Model)
					{
						<div class="col-lg-4 card">
							<a href="#">
								<img src="@item.Image" class="card-img-top img-fluid" alt="">
							</a>
							<div class="card-body">
								<ul class="blog-icons my-4">
									<li>
										<a href="#">
											<i class="far fa-calendar-alt"></i> @item.CreateDate.ToShortDateString()
										</a>
									</li>
									<li class="mx-2">
										<a href="#">
											<i class="far fa-comment"></i> 21
										</a>
									</li>
									<li>
										<a href="#">
											<i class="fas fa-eye"></i> @item.Category.CategoryName
										</a>
									</li>

								</ul>
								<h5 class="card-title">
									<a href="#">@item.Title</a>
								</h5>
								<p class="card-text mb-3">@item.Content.Substring(0,item.Content.Substring(0,100).LastIndexOf(" "))... </p>
								<a href="/Blog/BlogDetails/@item.ArticleId" class="btn btn-primary read-m">Devamını Oku</a>
							</div>
						</div>
					}
					
				
					
				</div>
			
			</div>
		</div>
	</div>
</section>

