
<div class="tech-btm">
    <h4 style="color:white">Mail bültenine abone ol</h4>
    <form id="subscribeForm" method="post">
        <input type="email" name="Mail" placeholder="Email" required>
        <input type="submit" value="Subscribe">
    </form>
    <div id="responseMessage"></div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $("#subscribeForm").on("submit", function (e) {
            e.preventDefault();

            var email = $("input[name='Mail']").val();

            $.ajax({
                url: "/NewsLetter/SubsMail",
                type: "POST",
                data: { Mail: email },
                success: function (response) {
                    if (response.success) {
                        $("#responseMessage").html('<p style="color: green;">' + response.message + '</p>');
                    } else {
                        $("#responseMessage").html('<p style="color: red;">' + response.message + '</p>');
                    }
                },
                error: function () {
                    $("#responseMessage").html('<p style="color: red;">Bir hata oluştu. Lütfen tekrar deneyiniz.</p>');
                }
            });
        });
    });
</script>
