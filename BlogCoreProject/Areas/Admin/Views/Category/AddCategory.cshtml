@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<h1 class="text-center my-4 fw-bold text-primary">Yeni Kategori Ekle</h1>

<div class="container bg-light p-5 rounded shadow-lg">
    <form asp-action="AddCategory" method="post" enctype="multipart/form-data">
        <div class="row gy-3">
            <!-- Kategori Adı -->
            <div class="col-md-6">
                <label for="CategoryName" class="form-label fw-semibold">Kategori Adı</label>
                <input type="text" name="CategoryName" id="CategoryName" class="form-control" placeholder="Kategori Adı giriniz" required>
            </div>

            <!-- Açıklama -->
            <div class="col-md-6">
                <label for="Description" class="form-label fw-semibold">Açıklama</label>
                <input type="text" name="Description" id="Description" class="form-control" placeholder="Açıklama giriniz" required>
            </div>
        </div>

        <!-- Butonlar -->
        <div class="mt-4 d-flex justify-content-between">
            <button type="submit" class="btn btn-success btn-lg px-4">
                <i class="bi bi-save"></i> Kaydet
            </button>
            <a href="/Admin/Category/CategoryList" class="btn btn-secondary btn-lg px-4">
                <i class="bi bi-arrow-left-circle"></i> Geri Dön
            </a>
        </div>
    </form>
</div>
